<!DOCTYPE html>
<html>
  <head>
    <title>Todo List<%= " | "+yield(:title) unless yield(:title).blank? %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if @show_title %>
      <h1><%= yield(:title) %></h1>
    <% end %>
    <%= yield %>
  </body>
</html>
