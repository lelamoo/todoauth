<%= bootstrap_form_with(model: @task, local: true) do |f| %>
    <%= f.alert_message "Please fix the errors below.", error_summary: false %>
    <%= f.text_field :name %>
    <%= f.text_field :due_date, id: 'dueDateField', placeholder: "Pick a due date" %>
    <%= f.text_field :priority %>
    <%= f.primary @task.persisted? ? "Update Task" : "Create Task" %>
<% end %>